@model IEnumerable<CategoryVM>

@{
    ViewData["Title"] = "Kateqoriyalar";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-primary">Kateqoriyalar</h2>
        <p class="text-muted">Saytdakı bütün kateqoriyaların idarə edilməsi</p>
    </div>
    <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
        <i class="bi bi-plus-lg me-2"></i> Yeni Kateqoriya
    </a>
</div>

<div class="card shadow border-0 rounded-3">
    <div class="card-body p-0">
        <table class="table table-hover table-striped align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="p-3 ps-4">ID</th>
                    <th class="p-3">Kateqoriya Adı</th>
                    <th class="p-3 text-end pe-4">Əməliyyatlar</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-bold text-secondary">#@item.Id</td>
                            <td class="fw-medium">@item.Name</td>
                            <td class="text-end pe-4">
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm" title="Redaktə">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger btn-sm ms-1"
                                                onclick="return confirm('@item.Name kateqoriyasını silmək istədiyinizə əminsiniz?');" title="Sil">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center p-5 text-muted">
                            <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                            Hələ heç bir kateqoriya yaradılmayıb.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>