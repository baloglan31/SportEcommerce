
@model HomeVM

@{
    ViewData["Title"] = "Ana Səhifə";
}

<div id="template-mo-zay-hero-carousel" class="carousel slide" data-bs-ride="carousel">

    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Sliders.Count; i++)
        {
            <li data-bs-target="#template-mo-zay-hero-carousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
        }
    </ol>

    <div class="carousel-inner">
        @for (int i = 0; i < Model.Sliders.Count; i++)
        {
            var slider = Model.Sliders[i];

            <div class="carousel-item @(i == 0 ? "active" : "")">
                <div class="container">
                    <div class="row p-5">
                        <div class="mx-auto col-md-8 col-lg-6 order-lg-last">
                            <img class="img-fluid" src="@slider.ImageUrl" alt="Slider Image">
                        </div>
                        <div class="col-lg-6 mb-0 d-flex align-items-center">
                            <div class="text-align-left align-self-center">
                                <h1 class="h1 text-success"><b>@slider.Title</b></h1>
                                <h3 class="h2">@slider.Subtitle</h3>

                                @if (!string.IsNullOrEmpty(slider.Link))
                                {
                                    <p class="mt-4">
                                        <a href="@slider.Link" class="btn btn-success btn-lg text-white">İndi Bax</a>
                                    </p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <a class="carousel-control-prev text-decoration-none w-auto ps-3" href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="prev">
        <i class="fas fa-chevron-left"></i>
    </a>
    <a class="carousel-control-next text-decoration-none w-auto pe-3" href="#template-mo-zay-hero-carousel" role="button" data-bs-slide="next">
        <i class="fas fa-chevron-right"></i>
    </a>
</div>
<section class="container py-5">
    <div class="row text-center pt-3">
        <div class="col-lg-6 m-auto">
            <h1 class="h1">Ayın Kateqoriyaları</h1>
            <p>Ən çox satılan və maraq görən məhsul kateqoriyalarımız.</p>
        </div>
    </div>
    <div class="row">
        @foreach (var category in Model.Categories)
        {
            <div class="col-12 col-md-4 p-5 mt-3">
                <a href="#"><img src="~/assets/img/category_img_01.jpg" class="rounded-circle img-fluid border"></a>
                <h5 class="text-center mt-3 mb-3">@category.Name</h5>
                <p class="text-center"><a href="#" class="btn btn-success">Məhsullara Bax</a></p>
            </div>
        }
    </div>
</section>
<section class="bg-light">
    <div class="container py-5">
        <div class="row text-center py-3">
            <div class="col-lg-6 m-auto">
                <h1 class="h1">Seçilmiş Məhsullar</h1>
                <p>Sizin üçün xüsusi olaraq seçdiyimiz ən yeni məhsullar.</p>
            </div>
        </div>
        <div class="row">
            @foreach (var product in Model.FeaturedProducts)
            {
                <div class="col-12 col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <a href="/Product/Details/@product.Id">
                            <img src="@(product.MainImageUrl ?? "/assets/img/no-image.png")" class="card-img-top" alt="@product.Name" style="height: 300px; object-fit: cover;">
                        </a>
                        <div class="card-body">
                            <ul class="list-unstyled d-flex justify-content-between mb-2">
                                <li>
                                    <i class="text-warning fa fa-star"></i>
                                    <i class="text-warning fa fa-star"></i>
                                    <i class="text-warning fa fa-star"></i>
                                    <i class="text-muted fa fa-star"></i>
                                    <i class="text-muted fa fa-star"></i>
                                </li>
                                <li class="text-muted text-right fw-bold" style="font-size: 1.2rem;">@product.Price.ToString("C2")</li>
                            </ul>

                            <a href="/Product/Details/@product.Id" class="h4 text-decoration-none text-dark fw-bold">@product.Name</a>
                            <p class="text-muted small mt-1">Kateqoriya: <span class="badge bg-secondary">@product.CategoryName</span></p>

                            <p class="card-text mt-3">
                                Bu məhsul axtardığınız keyfiyyəti və komfortu sizə təqdim edir.
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>