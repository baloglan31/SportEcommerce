@model Product

@{
    ViewData["Title"] = Model.Name;
    var mainImage = Model.Images.FirstOrDefault(i => i.IsMain)?.Url ?? "/assets/img/no-image.png";
    var allImages = Model.Images.ToList();
}

<section class="bg-light">
    <div class="container pb-5">
        <div class="row">
            <div class="col-lg-5 mt-5">
                <div class="card mb-3">
                    <img class="card-img img-fluid" src="@mainImage" alt="Məhsul Şəkli" id="product-detail" style="height: 500px; object-fit: cover;">
                </div>

                <div class="row">
                    <div class="col-1 align-self-center">
                        <a href="#multi-item-example" role="button" data-bs-slide="prev">
                            <i class="text-dark fas fa-chevron-left"></i>
                            <span class="sr-only">Previous</span>
                        </a>
                    </div>

                    <div id="multi-item-example" class="col-10 carousel slide carousel-multi-item" data-bs-ride="carousel">
                        <div class="carousel-inner product-links-wap" role="listbox">
                            @for (int i = 0; i < allImages.Count; i += 3)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <div class="row">
                                        @for (int j = i; j < i + 3 && j < allImages.Count; j++)
                                        {
                                            <div class="col-4">
                                                <a href="#">
                                                    <img class="card-img img-fluid" src="@allImages[j].Url" alt="Qalereya şəkli" style="height: 100px; object-fit: cover; cursor: pointer;" onclick="document.getElementById('product-detail').src='@allImages[j].Url'">
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="col-1 align-self-center">
                        <a href="#multi-item-example" role="button" data-bs-slide="next">
                            <i class="text-dark fas fa-chevron-right"></i>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-7 mt-5">
                <div class="card">
                    <div class="card-body">
                        <h1 class="h2">@Model.Name</h1>
                        <p class="h3 py-2 text-success fw-bold">@Model.Price.ToString("C2")</p>

                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <h6>Kateqoriya:</h6>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted"><strong>@Model.Category.Name</strong></p>
                            </li>
                        </ul>

                        <h6>Təsvir:</h6>
                        <p>@Model.Description</p>

                        <div class="row pb-3 mt-4">
                            <div class="col d-grid">
                                <button type="button" class="btn btn-success btn-lg" name="submit" value="addtocard">Səbətə At</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
