@model IEnumerable<ProductListVM>

@{
    ViewData["Title"] = "Məhsullar";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-primary">Məhsullar</h2>
        <p class="text-muted">Mağazadakı məhsulların idarə edilməsi</p>
    </div>
    <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
        <i class="bi bi-plus-lg me-2"></i> Yeni Məhsul
    </a>
</div>

<div class="card shadow border-0 rounded-3">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="p-3 ps-4" style="width: 250px;">Şəkillər (Əsas + Əlavə)</th>
                    <th>Ad</th>
                    <th>Kateqoriya</th>
                    <th>Qiymət</th>
                    <th class="text-end pe-4">Əməliyyatlar</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center gap-2">

                                    <div style="position: relative;">
                                        <img src="@(item.MainImageUrl ?? "https://via.placeholder.com/60")"
                                             class="rounded border border-primary"
                                             style="width: 60px; height: 60px; object-fit: cover;"
                                             title="Əsas Şəkil" />
                                        <span class="position-absolute top-0 start-0 translate-middle badge rounded-pill bg-primary" style="font-size: 0.6rem;">
                                            Main
                                        </span>
                                    </div>

                                    <div class="d-flex flex-wrap gap-1" style="max-width: 150px;">
                                        @if (item.AdditionalImageUrls != null && item.AdditionalImageUrls.Any())
                                        {
                                            foreach (var imgUrl in item.AdditionalImageUrls.Take(4)) 
                                            {
                                                <img src="@imgUrl" class="rounded border"
                                                     style="width: 30px; height: 30px; object-fit: cover; opacity: 0.8;" />
                                            }
                                            
                                            if (item.AdditionalImageUrls.Count > 4)
                                            {
                                                <span class="badge bg-secondary rounded-circle d-flex align-items-center justify-content-center"
                                                      style="width: 30px; height: 30px;">
                                                    +@(item.AdditionalImageUrls.Count - 4)
                                                </span>
                                            }
                                        }
                                    </div>
                                </div>
                            </td>

                            <td class="fw-bold">@item.Name</td>
                            <td><span class="badge bg-info text-dark">@item.CategoryName</span></td>
                            <td class="fw-bold text-success">@item.Price.ToString("C2")</td>

                            <td class="text-end pe-4">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger btn-sm ms-1"
                                                onclick="return confirm('Silməyə əminsiniz?');">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center p-5 text-muted">Məhsul yoxdur.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>