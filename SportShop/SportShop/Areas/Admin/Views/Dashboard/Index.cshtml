
@model DashboardVM

@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-md-6 col-lg-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <h3>@Model.ProductCount</h3>
                <p>Cəmi Məhsul</p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <h3>@Model.CategoryCount</h3>
                <p>Cəmi Kateqoriya</p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card bg-info text-white shadow mb-4">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h3>@Model.SliderCount</h3>
                        <p class="mb-0">Cəmi Slider</p>
                    </div>
                    <div>
                        <i class="fas fa-images fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center justify-content-between bg-info border-top-0">
                <a class="small text-white stretched-link" asp-controller="Slider" asp-action="Index">Ətraflı Bax</a>
                <div class="small text-white"><i class="fas fa-angle-right"></i></div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Son Əlavə Olunan Məhsullar</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Şəkil</th>
                        <th>Ad</th>
                        <th>Kateqoriya</th>
                        <th>Qiymət</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.RecentProducts.Any())
                    {
                        @foreach (var item in Model.RecentProducts)
                        {
                            <tr>
                                <td style="width: 80px;">
                                    <img src="@(item.MainImageUrl ?? "/assets/img/no-image.png")"
                                         style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;"
                                         alt="Product Image" />
                                </td>
                                <td>@item.Name</td>
                                <td>
                                    <span class="badge bg-info text-dark">@item.CategoryName</span>
                                </td>
                                <td class="text-success fw-bold">@item.Price AZN</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center">Hələ məhsul yoxdur.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>