@model UpdateProductVM
@{
    ViewData["Title"] = "Redaktə Et";
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-warning text-dark p-3">
            <h4 class="mb-0">Məhsulu Redaktə Et</h4>
        </div>
        <div class="card-body p-4">

            <form asp-action="Edit" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Ad</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="CategoryId" class="form-label fw-bold">Kateqoriya</label>
                        <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories"></select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Price" class="form-label fw-bold">Qiymət</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control" />
                    </div>
                </div>

                <div class="row mb-4 p-3 bg-light rounded border">

                    <div class="col-md-6 border-end">
                        <label class="form-label fw-bold text-primary">Əsas Şəkil (Vitrin)</label>

                        <div class="mb-2">
                            @if (!string.IsNullOrEmpty(Model.ExistingMainImageUrl))
                            {
                                <img src="@Model.ExistingMainImageUrl" class="img-thumbnail" style="height: 150px;" />
                            }
                            else
                            {
                                <span class="text-muted">Şəkil yoxdur</span>
                            }
                        </div>

                        <label class="small text-muted">Dəyişmək üçün yeni fayl seçin:</label>
                        <input asp-for="MainImage" class="form-control" type="file" accept="image/*" />
                    </div>

                    <div class="col-md-6 ps-4">
                        <label class="form-label fw-bold text-secondary">Əlavə Şəkillər</label>

                        <div class="d-flex flex-wrap gap-2 mb-3">
                            @if (Model.ExistingAdditionalImages != null)
                            {
                                foreach (var img in Model.ExistingAdditionalImages)
                                {
                                    <div class="position-relative" style="width: 80px; height: 80px;">
                                        <img src="@img.Url" class="w-100 h-100 object-fit-cover rounded border" />

                                        <button type="submit"
                                                formaction="@Url.Action("DeleteImage", new { imageId = img.Id })"
                                                formmethod="post"
                                                class="btn btn-danger btn-sm position-absolute top-0 end-0 p-0 d-flex align-items-center justify-content-center"
                                                style="width: 20px; height: 20px; transform: translate(30%, -30%); rounded-circle"
                                                title="Bu şəkli sil">
                                            &times;
                                        </button>
                                    </div>
                                }
                            }
                        </div>

                        <label class="small text-muted">Yenilərini əlavə et:</label>
                        <input asp-for="AdditionalImages" class="form-control" type="file" multiple accept="image/*" />
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Təsvir</label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-warning px-4">Yenilə</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Ləğv Et</a>
                </div>
            </form>
        </div>
    </div>
</div>