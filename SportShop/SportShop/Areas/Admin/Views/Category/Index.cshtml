@model IEnumerable<Category>
@{
    ViewData["Title"] = "Kateqoriyalar";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">Kateqoriyalar</h6>
        <a asp-action="Create" class="btn btn-success btn-sm"><i class="bi bi-plus-circle"></i> Yeni Kateqoriya</a>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Ad</th>
                    <th>Əməliyyatlar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> Redaktə
                                </a>

                                <a asp-action="Delete" class="btn btn-danger btn-sm ms-1">
                                    <i class="bi bi-trash"></i> Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>